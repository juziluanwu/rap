<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rap.mapper.MenuMapper">

    <insert id="insert" parameterType="com.rap.entity.Menu" useGeneratedKeys="true" keyProperty="id">
        insert into detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                `name`,
            </if>
            <if test="pid != null">
                pid,
            </if>
            <if test="type != null">
                `type`,
            </if>
            <if test="fid != null">
                fid,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name},
            </if>
            <if test="pid != null">
                #{pid},
            </if>
            <if test="type != null">
                #{type},
            </if>
            <if test="fid != null">
                #{fid},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.rap.entity.Menu">
        update detail
        <set>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="type != null">
                `type` = #{type},
            </if>
            <if test="fid != null">
                fid = #{fid},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="list" parameterType="Integer" resultType="com.rap.entity.Menu">
        select * from detail where pid = #{id}
    </select>
</mapper>