<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rap.mapper.ProjectMapper">

    <insert id="insert" parameterType="com.rap.entity.Project" useGeneratedKeys="true" keyProperty="id">
        insert into project
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fid != null">
                fid,
            </if>
            <if test="name != null">
                `name`,
            </if>
            <if test="type != null">
                `type`,
            </if>
            <if test="url != null">
                `url`,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="requestparam != null">
                requestparam,
            </if>
            <if test="responseparam != null">
                responseparam,
            </if>
            <if test="version != null">
                version,
            </if>
            <if test="pid != null">
                pid,
            </if>
            <if test="iftype != null">
                iftype,
            </if>
            <if test="creator != null">
                creator,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fid != null">
                #{fid},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="type != null">
                #{type},
            </if>
            <if test="url != null">
                #{url},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
            <if test="requestparam != null">
                #{requestparam},
            </if>
            <if test="responseparam != null">
                #{responseparam},
            </if>
            <if test="version != null">
                #{version},
            </if>
            <if test="pid != null">
                #{pid},
            </if>
            <if test="iftype != null">
                #{iftype},
            </if>
            <if test="creator != null">
                #{creator},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.rap.entity.Project">
        update project
        <set>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="fid != null">
                fid = #{fid},
            </if>
            <if test="type != null">
                `type` = #{type},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="requestparam != null">
                requestparam = #{requestparam},
            </if>
            <if test="responseparam != null">
                responseparam = #{responseparam},
            </if>
            <if test="version != null">
                version = #{version},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="iftype != null">
                iftype = #{iftype},
            </if>
            <if test="creator != null">
                creator = #{creator},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="list" parameterType="map" resultType="com.rap.entity.Project">
        select * from project
        <where>
            <if test="pid != null">
                and `pid` = #{pid}
            </if>
            <if test="type != null">
                and `type` = #{type}
            </if>
            <if test="name != null and name !=''">
                and `name` like '%${name}%'
            </if>
        </where>
    </select>

    <select id="selectById" parameterType="Integer" resultType="com.rap.entity.Project">
        select * from project where id = #{id}
    </select>

    <select id="selectByProductid" parameterType="Integer" resultType="com.rap.entity.Project">
        select id,fid,`name`,version,pid,`type` from project where pid = #{pid}
    </select>

    <delete id="batchdelete" parameterType="list">
        delete from project where id in (
        <foreach collection="list" item="item" index="no"
                 separator=",">
            #{item}
        </foreach>
        )
    </delete>

    <select id="selectTreeByProductid" parameterType="Integer" resultType="com.rap.entity.Project">
        select id,fid,CONCAT(`name`,'---',IFNULL(creator,'æ— ')) AS name,version,pid,`type` from project where pid = #{pid}
    </select>
</mapper>